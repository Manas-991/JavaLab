package passwordGen;
import java.util.Random;
import java.lang.Math;
public class PasswordCrack implements Runnable {
	
	Thread t ;
	String s;
	String check;
	Passwordtool p;
	String numbers = "1234567890d";
	Random random = new Random();
	int max;
	int min;
	public PasswordCrack(String s) {
	p=new Passwordtool();
	p.SelectFlag(true, true, true, true);
	t = new Thread(this);
	t.start();
	this.s=s;
	min=1;
	max=10;
	
}
	public void run(){
		try {
			do {
				System.out.println(check = p.generatePassword((int)(Math.random()*(max-min+1)+min)));
			}
			while((!s.equals(check))||(!s.equalsIgnoreCase(check)));
			System.out.println("Password is "+check +" or "+ check.toLowerCase());
		}
		catch(Exception e) {
			System.out.println(e);
		}
	}
	public static void main(String args[]) {
		new PasswordCrack("man");
	}
}
